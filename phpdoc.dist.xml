<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
	<title>A3M v2.0.0 API</title>
    <parser>
        <target>./api/</target>
    </parser>
    <transformer>
        <target>./api/</target>
    </transformer>
    <files>
        <directory>./application/controllers</directory>
        <directory>./application/helpers</directory>
        <directory>./application/libraries</directory>
        <directory>./application/models</directory>
    </files>

    <logging>
        <level>warn</level>
        <paths>
            <default>./api/log/{DATE}.log</default>
            <errors>./api/{DATE}.errors.log</errors>
        </paths>
    </logging>
</phpdoc>
